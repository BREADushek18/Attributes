<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="387dp"
        android:layout_height="99dp"
        android:hint=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.392" />

    <Button
        android:id="@+id/button_blackText"
        android:layout_width="185dp"
        android:layout_height="61dp"
        android:layout_marginTop="36dp"
        android:text="Черный текст"
        app:layout_constraintEnd_toStartOf="@+id/button_redText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/button_redText"
        android:layout_width="185dp"
        android:layout_height="61dp"
        android:layout_marginTop="36dp"
        android:text="Красный текст"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button8SP"
        android:layout_width="185dp"
        android:layout_height="61dp"
        android:layout_marginTop="36dp"
        android:text="Размер - 8SP"
        app:layout_constraintEnd_toStartOf="@+id/button24SP"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_blackText" />

    <Button
        android:id="@+id/button24SP"
        android:layout_width="185dp"
        android:layout_height="61dp"
        android:layout_marginTop="36dp"
        android:text="Размер - 24SP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_redText" />

    <Button
        android:id="@+id/button_whiteBack"
        android:layout_width="185dp"
        android:layout_height="61dp"
        android:layout_marginTop="36dp"
        android:text="Белый фон"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button8SP" />

    <Button
        android:id="@+id/button_yellowBack"
        android:layout_width="185dp"
        android:layout_height="61dp"
        android:layout_marginTop="36dp"
        android:text="Желтый фон"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button_whiteBack"
        app:layout_constraintTop_toBottomOf="@+id/button24SP" />


</androidx.constraintlayout.widget.ConstraintLayout>